# WebSocket Configuration
SOCKET_PORT=3001

# Media Configuration
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg
